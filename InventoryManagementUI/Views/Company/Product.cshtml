@model IEnumerable<InventoryManagementEntity.Product>
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}
@Html.ActionLink("Add New Product", "AddProduct", "Company", new { @class = "btn btn-success btn-block mg-b-10" })
<div class="br-section-wrapper">
    <h6 class="br-section-label">Product DataTable</h6>
    <span class="text-danger">@TempData["NotProduct"] @TempData["DeleteNum"]</span>
    <div class="table-wrapper">
        <table id="datatable1" class="table display responsive nowrap dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable1_info" style="width: 935px;">
            <thead>
                <tr role="row">
                    <th class="wd-15p sorting_asc" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" style="width: 112px;" aria-sort="ascending" aria-label="First name: activate to sort column descending">BarcodeCode</th>

                    <th class="wd-20p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" style="width: 175px;" aria-label="Position: activate to sort column ascending">ProductName</th>
                    <th class="wd-15p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" style="width: 114px;" aria-label="Start date: activate to sort column ascending">Pieces</th>
                    <th class="wd-10p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" style="width: 69px;" aria-label="Salary: activate to sort column ascending">Price</th>
                    <th class="wd-25p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" style="width: 208px;" aria-label="E-mail: activate to sort column ascending">TaxRate</th>
                    <th class="wd-25p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" style="width: 208px;" aria-label="E-mail: activate to sort column ascending">Edit</th>
                    <th class="wd-25p sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" style="width: 208px;" aria-label="E-mail: activate to sort column ascending">Detail</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Product in Model)
                {
                    <tr role="row" class="odd">


                        <td class="sorting_1" tabindex="0">@Product.BarcodeCode</td>
                        <td>@Product.ProductName</td>

                        <td>@Product.Pieces</td>
                       @{float Price = (float)Product.Price;}
                        <td>@Price</td>
                            
                        <td>% @Product.TaxRate</td>
                        <td>@Html.ActionLink("Edit", "EditProduct", "Company", new { Product.Id }, new { @class = "btn btn-teal" })</td>
                        <td>@Html.ActionLink("Detail", "DetailProduct", "Company", new { Product.Id }, new { @class = "btn btn-info" })</td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div><!-- table-wrapper -->
<script>


    $('#datatable1').DataTable({
        responsive: true,
        language: {
            searchPlaceholder: 'Search...',
            sSearch: '',
            lengthMenu: '_MENU_ items/page',
        }
    });




</script>

